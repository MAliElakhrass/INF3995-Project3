<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_sound">
    <ImageView
        android:id="@+id/low_sound_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/ic_low" />
    <ImageView
        android:id="@+id/high_sound_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_high"
        android:layout_alignParentRight="true" />

    <SeekBar
        android:id="@+id/seekBarSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/high_sound_imageView"
        android:layout_toRightOf="@+id/low_sound_imageView" />
</RelativeLayout>
